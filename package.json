{
	"name": "ionic",
	"displayName": "Ionic",
	"description": "Ionic & Capacitor project tooling and recommendations",
	"version": "0.0.2",
	"icon": "media/ionic.png",
	"publisher": "ionic",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://ionic.io"
	},
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:ionic",
		"onLanguage:json",
		"onLanguage:jsonc",
		"onCommand:ionic.refresh",
		"onCommand:ionic.add",
		"onCommand:ionic.edit",
		"onCommand:ionic.fix"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ionic-recommendation",
					"title": "Ionic",
					"icon": "media/ionic.svg"
				}
			]
		},
		"views": {
			"ionic-recommendation": [
				{
					"id": "ionic",
					"name": "Ionic",
					"icon": "media/ionic.svg",
					"contextualTitle": "Ionic"
				}
			],
			"explorer": []
		},
		"commands": [
			{
				"command": "ionic.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "ionic.add",
				"title": "Add"
			},
			{
				"command": "ionic.edit",
				"title": "Info",
				"icon": {
					"light": "resources/light/info.svg",
					"dark": "resources/dark/info.svg"
				}
			},
			{
				"command": "ionic.fix",
				"title": "Fix Issue"
			}
		],
		"menus": {
			"commandPalette": [],
			"view/title": [
				{
					"command": "ionic.refresh",
					"when": "view == ionic",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "ionic.edit",
					"when": "view == ionic && viewItem == recommendation && false && 'enable if you want an info button link'",
					"group": "inline"
				}
			]
		},
		"configuration": []
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"package": "vsce package && cp ionic-0.0.1.vsix site/ionic.vsix && cd site && netlify deploy --prod --dir .",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^12.12.0",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"fast-xml-parser": "^3.21.1",
		"jsonc-parser": "^0.4.2",
		"minimist": "^0.2.1",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2",
		"semver": "7.3.5"
	}
}
